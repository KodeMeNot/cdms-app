    max-width: 100%;
    line-height: 21px;
    overflow: hidden;
    padding: 0 10px 0 10px;
    -o-text-overflow: ellipsis;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .org-chart-modal-body {
    padding: 10px;
    //background-color: #eef2f4;
    margin: 0px 10px;
    }

  .org-chart-modal-footer {
    padding: 2px 16px;
    //background-color: #5cb85c;
    //color: white;
  }
  label {
    font-size: 0.9rem;
